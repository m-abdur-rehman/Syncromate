{
    "version": 2,
    "builds": [
      {
        "src": "backend-syncro/src/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "build" }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend-syncro/src/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "build/$1"
      }
    ]
  }